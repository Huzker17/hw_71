@model hh.ViewModels.RegisterViewModel

<h2>Регистрация нового пользователя</h2>

<form method="post" asp-controller="Account" asp-action="Register" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    Компания: <input type="checkbox" id="myCheck" onclick="changeName()">   
    <div>
        <label asp-for="UserName" id="Name">Имя </label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <h3>Выберите файл для загрузки</h3>
        <input type="file" name="uploadedFile" /><br>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input type="password" asp-for="PasswordConfirm"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" />
    </div>
</form>


<script>
    function changeName() {
        var checkBox = document.getElementById("myCheck");
        var name = document.getElementById("Name");
        if (checkBox.checked == true) {
            name.innerHTML = "Имя компании";
        } else {
            name.innerHTML = "Имя";
        }
    }
</script>